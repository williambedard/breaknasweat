#shopify-section-{{ section.id }} {
	{% if section.settings.margin_top == 0 %}
		padding-top: 0;	
	{% else %}
		padding-top: max({{ section.settings.margin_top | times: 0.25 | round: 0 }}px, 2rem);
	{% endif %}
	{% if section.settings.margin_bottom == 0 %}
		padding-bottom: 0;
	{% else %}
		padding-bottom: max({{ section.settings.margin_bottom | times: 0.25 | round: 0 }}px, 2rem);
	{% endif %}
}


@media screen and (min-width: 990px) {
#shopify-section-{{ section.id }} {
		padding-top: {{ section.settings.margin_top }}px;
		padding-bottom: {{ section.settings.margin_bottom }}px;
	}
}


