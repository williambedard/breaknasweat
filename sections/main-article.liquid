				{
					"type": "checkbox",
					"id": "show_image",
					"default": true,
					"label": "t:sections.all.article_card.show_image.label"
				},
				{
					"type": "checkbox",
					"id": "show_tags",
					"default": true,
					"label": "t:sections.all.article_card.show_tags.label"
				},
				{
					"type": "checkbox",
					"id": "show_date",
